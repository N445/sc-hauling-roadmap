{% block custom_route_widget %}
    <div class="row align-items-end">
        <div class="col-md-6">
            {{ form_row(form.fromLocation) }}
            {{ form_row(form.fromSpecifiqueLocation) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.toLocation) }}
            {{ form_row(form.toSpecifiqueLocation) }}
        </div>
    </div>


    <div class="accordion">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCargos{{ form.vars.id }}" aria-expanded="true" aria-controls="collapseCargos{{ form.vars.id }}">
                    Cargos
                </button>
            </h2>
            <div id="collapseCargos{{ form.vars.id }}" class="accordion-collapse collapse">
                <div class="accordion-body">
                    {{ form_widget(form.cargos) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block custom_cargo_widget %}
    <div class="row">
        <div class="col-md-6">{{ form_row(form.commodity) }}</div>
        <div class="col-md-6">{{ form_row(form.quantity) }}</div>
    </div>
{% endblock %}